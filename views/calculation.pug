html
    head
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Game Results
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
        style.
            .results-container {
                max-width: 600px;
                margin: 50px auto;
                padding: 20px;
                text-align: center;
                background: white;
                border-radius: 8px;
                box-shadow: 0 0 10px rgba(0,0,0,0.1);
            }
            .position {
                font-size: 24px;
                margin: 20px 0;
            }
            .score {
                font-size: 20px;
                margin: 15px 0;
            }
            .dashboard-btn {
                padding: 10px 20px;
                background: #4CAF50;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                font-size: 16px;
                margin-top: 20px;
            }
    body
        .results-container
            h1 Game Results
            .position Congratulations, you are ##{position}!
            .score Total Score: #{score} points
            .game-info
                p Game Duration: #{duration}
                p Players: #{totalPlayers}
            button.dashboard-btn(onclick="window.location.href='/dashboard'") Return to Dashboard