html
    head
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles/gamehistory.css")
        title Game History

    body
        .container
            h1 Game History
            
            if gameHistory && gameHistory.length > 0
                table.history-table
                    thead
                        tr
                            th Game Name
                            th Score
                            th Rank
                            th Played On
                    tbody
                        each game in gameHistory
                            tr(class=game.rank <= 3 ? `rank-${game.rank}` : '')
                                td= game.game_name
                                td= game.score
                                td ##{game.rank}
                                td= new Date(game.played_on).toLocaleString()
            else
                p No game history available.

            br
            button.back-btn(onclick="location.href='/dashboard'") Back to Dashboard